<Page
    
    x:Class="SidibanUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SidibanUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:x1="using:System"
    xmlns:entity="using:Connection.Entities"
    mc:Ignorable="d"
     Width="1200" Height="700">

    <Grid>
        <Grid Margin ="20" Background="White" >

            <Rectangle HorizontalAlignment="Center" Height="484" Stroke="Black" 
                       VerticalAlignment="Center" Width="268" 
                       Fill="#FF8A068A" RadiusX="15" RadiusY="15"/>

            <Rectangle HorizontalAlignment="Left" Height="484" 
                       Margin="51,0,0,0" Stroke="Black"
                       VerticalAlignment="Center" Width="268"
                       Fill="#FF8A068A" RadiusX="15" RadiusY="15"/>


            <Rectangle HorizontalAlignment="Left" Height="484"
                       Margin="823,0,0,0" Stroke="Black" 
                       VerticalAlignment="Center" Width="268" 
                       Fill="#FF8A068A" RadiusX="15" RadiusY="15"/>

            <Rectangle HorizontalAlignment="Center" Height="38"
                       VerticalAlignment="Top" Width="1160" 
                       Fill="#FF8A068A" RadiusX="0" RadiusY="4"/>

            <TextBlock HorizontalAlignment="Left" Margin="10,2,0,0"
                       TextWrapping="Wrap" Text="SIDIBAN" 
                       VerticalAlignment="Top" 
                       FontSize="22" FontStyle="Italic" Padding="10,3,4,0"/>


            <TextBox  x:Name="TodoCard" HorizontalAlignment="Left" Margin="109,97,0,0" 
                      TextWrapping="Wrap" Text="        TODO"
                      VerticalAlignment="Top" Width="122" Height="28" FontSize="16"
                      BorderBrush="MediumPurple" Background="MediumPurple" Padding="3,0,0,0"
                      CornerRadius="1"/>


            <TextBox x:Name="DoingCard" HorizontalAlignment="Center" Margin="0,97,0,0" 
                     TextWrapping="Wrap" Text="      DOING"
                     VerticalAlignment="Top" Width="116" Height="28" FontSize="16" 
                     BorderThickness="2,2,2,2" BorderBrush="MediumPurple" Background="MediumPurple" Padding="3,0,0,0" CornerRadius="1"/>


            <TextBox x:Name="DoneCard" HorizontalAlignment="Left" Margin="895,97,0,0"
                     TextWrapping="Wrap" Text="        DONE"
                     VerticalAlignment="Top" Width="131" Height="28" FontSize="16" 
                     BorderThickness="2,2,2,2" BorderBrush="MediumPurple" Background="MediumPurple" Padding="3,0,0,0" CornerRadius="1"/>

            <Button  x:Name="back_uwp" Click="back_uwp_Click"
                     Content="add a new card" Margin="1020,606,0,0" VerticalAlignment="Top"
                     Background="MediumPurple" Width="118" BorderBrush="Purple" BorderThickness="2"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="19"/>

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions/>



            </Grid>
            <ListView CornerRadius="4"  HorizontalAlignment="Left" Margin="75,20,150,0" Height="330" ItemClick="Cards_list_ItemClick" SelectionChanged="Cards_list_SelectionChanged" IsItemClickEnabled="False" Width ="220" x:Name="Cards_list" Grid.Row="0" ItemsSource="{x:Bind cards}">

                <ListView.ItemTemplate >
                    <DataTemplate x:DataType="entity:Card" >
                        <StackPanel Orientation="Vertical" Background="MediumPurple" BorderBrush="B">
                            <TextBlock x:Name="Title_card" Text="{x:Bind Title}" HorizontalAlignment="Center" FontSize="20"/>
                            <TextBlock x:Name="Description_card" Text="Apple Inc. (NASDAQ: AAPL; anteriormente chamado de Apple Computer, Inc.) "  FontSize="12" HorizontalAlignment="Center" TextWrapping="WrapWholeWords"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>





        </Grid>
        <Button x:Name="go_to_doing" Margin="243,536,0,0" VerticalAlignment="Top"
                Background="MediumPurple" Height="28" Width="46" Content="Pass" 
                 FontSize="12" RenderTransformOrigin="0.696,0.123" FontWeight="Bold" Click="go_to_doing_Click_1"/>

        <Button x:Name="Go_to_done" Background="MediumPurple"
                FontSize="12" RenderTransformOrigin="0.696,0.123"
                FontWeight="Bold" Margin="676,550,0,0"  Height="28" Width="46"
                VerticalAlignment="Top" Content="Pass" Click="Go_to_done_Click">

        </Button>

    </Grid>
</Page>
